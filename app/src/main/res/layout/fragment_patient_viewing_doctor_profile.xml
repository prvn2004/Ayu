<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Patient_viewing_doctor_profile">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageButton
                    android:id="@+id/close"
                    android:layout_width="58dp"
                    android:layout_height="49dp"
                    android:layout_marginLeft="6dp"
                    android:background="@drawable/profile_rounded"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.011"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="1.0"
                    android:src="@drawable/ic_baseline_arrow_back_24"/>

            </androidx.constraintlayout.widget.ConstraintLayout>
        </LinearLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"

  >


        <com.google.android.material.button.MaterialButton
            android:id="@+id/BookDoctorFinal"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:background="@drawable/edittext_rounded"
            android:text="BOOK APPOINTMENT"
            android:textColor="@color/White"
            app:backgroundTint="#282637"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/linearLayout2"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/linearLayout3"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout3"
            app:layout_constraintVertical_bias="0.121" />

        <TextView
            android:id="@+id/doctorExperienceYear2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/normal_round_corner"
            android:backgroundTint="#3EC4D0"
            android:gravity="center|center_horizontal"
            android:padding="5dp"
            android:text="13 years exp"
            android:textColor="@color/White"
            android:textColorHighlight="@color/DeepSkyBlue"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/doctorImage"
            app:layout_constraintHorizontal_bias="0.56"
            app:layout_constraintStart_toStartOf="@+id/doctorImage"
            app:layout_constraintTop_toBottomOf="@+id/doctorImage"
            app:layout_constraintVertical_bias="0.021" />

        <TextView
            android:id="@+id/doctorRegNo2"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:text="Reg.No."
            android:textColor="@color/DeepSkyBlue"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/doctorExpertiseText3"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/doctorExpertiseText3"
            app:layout_constraintTop_toBottomOf="@+id/doctorExpertiseText3"
            app:layout_constraintVertical_bias="0.029" />

        <TextView
            android:id="@+id/doctorExpertiseText3"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:text="Psyschologist"
            android:textColor="@color/DeepSkyBlue"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="parent"

            app:layout_constraintEnd_toEndOf="@+id/doctorNumber2"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/doctorNumber2"
            app:layout_constraintTop_toBottomOf="@+id/doctorNumber2"
            app:layout_constraintVertical_bias="0.012" />

        <TextView
            android:id="@+id/doctorNumber2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0123456789"
            android:textColor="#000000"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="parent"

            app:layout_constraintEnd_toEndOf="@+id/doctorName"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/doctorName"
            app:layout_constraintTop_toBottomOf="@+id/doctorName"
            app:layout_constraintVertical_bias="0.018" />

        <TextView
            android:id="@+id/doctorName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:text="Praveen kumar"
            android:textStyle="bold"
            android:textColor="#000000"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.237"
            app:layout_constraintStart_toEndOf="@+id/doctorImage"
            app:layout_constraintTop_toTopOf="@+id/doctorImage"
            app:layout_constraintVertical_bias="0.0" />

        <ImageView
            android:id="@+id/doctorImage"
            android:layout_width="176dp"
            android:layout_height="171dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:scaleType="centerCrop"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.068"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.028"
            android:src="@drawable/doctoravatarmale"/>

        <LinearLayout
            android:id="@+id/linearLayout3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.114"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/doctorExperienceYear2"
            app:layout_constraintVertical_bias="0.061">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="SELECT DATE:"
                android:textColor="@color/Black"
                android:textSize="16dp"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/DateText"
                android:layout_width="137dp"
                android:layout_height="41dp"
                android:drawableLeft="@drawable/ic_baseline_date_range_24"
                android:gravity="left|center_vertical"
                android:hint="YYYY-MM-DD"
                android:textSize="18dp"

                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.142"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/doctorExperienceYear2"
                app:layout_constraintVertical_bias="0.05" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.677"
            app:layout_constraintStart_toEndOf="@+id/linearLayout3"
            app:layout_constraintTop_toBottomOf="@+id/doctorExperienceYear2"
            app:layout_constraintVertical_bias="0.06">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="SELECT TIME:"
                android:textColor="@color/Black"
                android:textSize="16dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/TimeText"
                android:layout_width="137dp"
                android:layout_height="41dp"
                android:drawableLeft="@drawable/ic_baseline_access_time_24"
                android:gravity="left|center_vertical"
                android:hint="HH-MM"
                android:textSize="18dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.142"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/doctorExperienceYear2"
                app:layout_constraintVertical_bias="0.05" />


        </LinearLayout>

        <ProgressBar
            android:id="@+id/progressBar"
            style="?android:attr/progressBarStyle"
            android:layout_width="78dp"
            android:layout_height="73dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:visibility="invisible"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/doctorExperienceYear2"
            app:layout_constraintVertical_bias="0.131" />


    </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.appcompat.widget.LinearLayoutCompat>
</FrameLayout>