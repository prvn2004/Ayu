<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/doctor_card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="8dp"
    android:layout_marginTop="10dp"
    android:layout_marginRight="8dp"
    android:layout_marginBottom="10dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="8dp">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/LinearLayout_1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:elevation="20dp"
        android:padding="20px">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edittext_rounded">


            <ImageView
                android:id="@+id/DoctorImage"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:scaleType="centerCrop"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.265"
                tools:src="@drawable/doctoravatarmale" />

            <TextView
                android:id="@+id/DoctorName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:text="Praveen kumar"
                android:textStyle="bold"
                android:textColor="#000000"
                android:textSize="18sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.075"
                app:layout_constraintStart_toEndOf="@+id/DoctorImage"
                app:layout_constraintTop_toTopOf="@+id/DoctorImage"
                app:layout_constraintVertical_bias="0.0" />

            <TextView
                android:id="@+id/doctorNumber"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:text="8740940411"
                android:textColor="#000000"
                android:textSize="14sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/DoctorName"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/DoctorName"
                app:layout_constraintTop_toBottomOf="@+id/DoctorName"
                app:layout_constraintVertical_bias="0.076" />

            <TextView
                android:id="@+id/doctorRegNo"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:text="Reg.No."
                android:textColor="@color/DeepSkyBlue"
                android:textSize="14sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/doctorExpertiseText2"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/doctorExpertiseText2"
                app:layout_constraintTop_toBottomOf="@+id/doctorExpertiseText2"
                app:layout_constraintVertical_bias="0.126" />

            <TextView
                android:id="@+id/doctorExpertiseText2"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:text="Psyschologist"
                android:textColor="@color/DeepSkyBlue"
                android:textSize="14sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/doctorNumber"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/doctorNumber"
                app:layout_constraintTop_toBottomOf="@+id/doctorNumber"
                app:layout_constraintVertical_bias="0.07" />

            <TextView
                android:id="@+id/doctorExperienceYear"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/normal_round_corner"
                android:backgroundTint="#3EC4D0"
                android:gravity="center_horizontal"
                android:padding="5dp"
                android:text="13 years exp"
                android:textColor="@color/White"
                android:textColorHighlight="@color/DeepSkyBlue"
                android:textSize="14sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/DoctorImage"
                app:layout_constraintHorizontal_bias="0.7"
                app:layout_constraintStart_toStartOf="@+id/DoctorImage"
                app:layout_constraintTop_toBottomOf="@+id/doctorNumber"
                app:layout_constraintVertical_bias="0.8" />

            <LinearLayout
                android:id="@+id/linearLayout"
                android:layout_width="110dp"
                android:layout_height="118dp"
                android:orientation="vertical"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.978"
                app:layout_constraintStart_toEndOf="@+id/imageView7"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.269">

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal|center_vertical"
                    android:text="Time"
                    android:textColor="#000000" />

                <TextView
                    android:id="@+id/TimeButton1"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:background="@color/LightGrey"
                    android:gravity="center"
                    android:text="8:00-9:00"
                    android:textColor="@color/Black"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/TimeButton2"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:background="@color/LightGrey"
                    android:gravity="center"
                    android:text="14:00-15:00"
                    android:textColor="@color/Black"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/TimeButton3"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:background="@color/LightGrey"
                    android:gravity="center"
                    android:text="19:00-20:00"
                    android:textColor="@color/Black"
                    android:textSize="14sp" />

            </LinearLayout>

            <Button
                android:id="@+id/DoctorBookButton"
                android:layout_width="109dp"
                android:layout_height="46dp"
                android:layout_marginBottom="20dp"
                android:backgroundTint="@color/DarkOrange"
                android:drawableRight="@drawable/book_arrow"
                android:text="Book"
                android:textColor="@color/White"
                android:textSize="10sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="@+id/linearLayout"
                app:layout_constraintTop_toBottomOf="@+id/linearLayout"
                app:layout_constraintVertical_bias="1.0" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.appcompat.widget.LinearLayoutCompat>

</androidx.cardview.widget.CardView>